{
  "name": "ticketfly-css-normalize",
  "version": "0.1.0",
  "description": "Normalization settings for ticketfly-css",
  "main": "index.css",
  "style": "index.css",
  "keywords": [
    "ticketfly-css",
    "ticketfly-css normalize",
    "css normalize",
    "css"
  ],
  "repository": {
    "url": "https://github.com/Ticketfly-UI/ticketfly-css-normalize.git",
    "type": "git"
  },
  "files": [
    "LICENSE"
  ],
  "bugs": {
    "url": "https://github.com/Ticketfly-UI/ticketfly-css-normalize/issues"
  },
  "homepage": "https://github.com/Ticketfly-UI/ticketfly-css-normalize",
  "author": "Brian Sipple <@Brian_Sipple>",
  "license": "MIT",
  "devDependencies": {
    "cssnano": "^3.9.1",
    "del-cli": "^0.2.1",
    "http-server": "^0.9.0",
    "npmpub": "^3.1.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "stylelint": "^8.1.1",
    "stylelint-config-ticketfly": "^0.1.0"
  },
  "scripts": {
    "clean": "del build/**",
    "setup": "mkdir -p build",
    "transform": "postcss --config postcss.config.js",
    "minify": "postcss -u cssnano build/ticketfly-css-normalize.css -o build/ticketfly-css-normalize.min.css",
    "build:dist": "npm run setup && npm run transform",
    "build:dist:min": "npm run build:dist && npm run minify",
    "build:test": "npm run clean && npm run transform && postcss -u postcss-import -u postcss-cssnext test/index-test.css -o build/test.css",
    "build:lint": "npm run setup && postcss --config test/postcss.config.js",
    "serve:test": "npm run build:test && http-server -p 4802 -o",
    "lint:css": "npm run build:lint && rm build/lint.css",
    "test": "npm run lint:css",
    "prepublish": "npm run test && npm run build:test && npm run build:dist",
    "release": "npmpub"
  }
}
